<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backg"

    android:layout_gravity="center_vertical"
    android:layout_height="match_parent"
    tools:context="com.example.hotelmanagement.MainActivity">
    <Button
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:theme="@style/MyButton"

        android:id="@+id/btn_hotel_mngr"
        android:text="Hotel Manager Login"
        android:layout_marginTop="189dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:id="@+id/btn_customer"
        android:text="Customer Login"
        android:theme="@style/MyButton"

        android:layout_marginTop="73dp"
        android:layout_alignTop="@+id/btn_hotel_mngr"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:id="@+id/btn_chef"
        android:text="Chef Login"
        android:theme="@style/MyButton"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/btn_customer"
        android:layout_alignLeft="@+id/btn_customer"
        android:layout_alignStart="@+id/btn_customer"
        android:layout_alignRight="@+id/btn_customer"
        android:layout_alignEnd="@+id/btn_customer" />


</RelativeLayout>
